<section class="content-header">
  <h1>
    Banner
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li class="active">Banner - Add</li>
  </ol>
</section>

<section class="content">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              
              <li class="active"><a href="#settings" data-toggle="tab">Banner - Add</a></li>
            </ul>
            <div class="tab-content">
            	
              	{{#if error_message}}
              	<div class="alert alert-danger" id="result77">
              	{{error_message}}
              	</div>
              	{{/if}}
               <div class="tab-pane active" id="settings">
                <form name="frmBanner" id="frmBanner_add" method="post" action="/admin/banner/add" class="form-horizontal"  enctype="multipart/form-data">
                  
                  <div class="form-group ">
                    <label for="header_1" class="col-sm-2 control-label">Heading-1</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="header_1" placeholder="Enter Banner Heading 1" name="header_1" value="{{body.header_1}}" >
                      
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="header_2" class="col-sm-2 control-label">Heading-2</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="header_2" placeholder="Enter Banner Heading 1" name="header_2" value="{{body.header_2}}" >
                      
                      
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                      <textarea class="form-control" id="description" placeholder="Enter Description" name="description">{{body.description}}</textarea>
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="banner_image" class="col-sm-2 control-label">Image</label>
                    <div class="col-sm-10">
                      <input type="file" id="banner_image" name="banner_image" >
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="remarks" class="col-sm-2 control-label">Status</label>

                    <div class="col-sm-10">
                      <select name="status" id="status" class="form-control">
                        <option value="" disabled="disabled">Select Any</option>
                        <option value="1">Active</option>
                        <option value="0">In-Active</option>
                      </select>
                      <span class="text-danger"></span>
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger" id="frmBanner_add_submit">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

</section>