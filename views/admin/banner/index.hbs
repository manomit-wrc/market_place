<section class="content-header">
      <h1>
        Banner
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>        
        <li class="active">Banner List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          {{#if message}}<div class="alert alert-success" id="result77" style="display:none;">{{message}}</div>{{/if}}
                             
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Banner List</h3>
            </div>
            <!-- /.box-header -->
            <div class="topbtn"><a href="/admin/banner/add"><button type="button" class="btn bg-purple btn-rightad">ADD</button></a></div>
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Header 1</th>
                  <th>Header 2</th>                  
                  <th>Status</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each banner}}
                     <tr>
                      <td>{{this.header_1}}</td>
                      <td>{{this.header_2}}</td>
                      {{#if this.status}}
                      <td>Active
                      </td>
                      {{else}}
                      <td>
                      In-Active
                      </td>
                      {{/if}}                      
                      <td><a href="/admin/banner/edit/{{this.id}}" >Edit</a>&nbsp;|&nbsp;<a href="/admin/banner/delete/{{this.id}}" onclick="return confirm('Are you sure?')">Delete</a></td>
                    </tr>
                     {{/each}}               
                </tbody>
                
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>