<section class="content-header">
      <h1>
        How It Work
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>        
        <li class="active">Work List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          {{#if message}}<div class="alert alert-success" id="result77" style="display:none;">{{message}}</div>{{/if}}
                             
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Work List</h3>
            </div>
            <!-- /.box-header -->
            <div class="topbtn"><a href="/admin/works/add"><button type="button" class="btn bg-purple btn-rightad">ADD</button></a></div>
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Description</th>
                  <th>Image</th>   
                  <th>Vedio</th>             
                  <th>Action</th>
                </tr>
                </thead>
                
                <tbody>
                    {{#each work}}
                     <tr>
                      <td>{{this.description}}</td>                     
                      <td><img src="/work/{{this.image}}" height="90" width="90"></td>  
                      <td><a href="work/vedio/{{this.video}}" target="_blank">{{this.video}}</a></td>                     
                      <td><a href="/admin/works/edit/{{this.id}}" title="Edit">Edit</a>&nbsp;|&nbsp;<a href="/admin/work/delete/{{this.id}}" onclick="return confirm('Are you sure?')" title="Delete">Delete</a></td>
                    </tr>
                     {{/each}}               
                </tbody>
                
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>