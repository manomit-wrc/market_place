<section class="content-header">
  <h1>
    Works
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li><a href="/admin/works">Dashboard</a></li>
    <li class="active">Add</li>
  </ol>
</section>

<section class="content">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              
              <li class="active"><a href="#settings" data-toggle="tab">Works - Add</a></li>
            </ul>
            <div class="tab-content">
            	
              	{{#if error_message}}
              	<div class="alert alert-danger" id="result77">
              	{{error_message}}
              	</div>
              	{{/if}}
               <div class="tab-pane active" id="settings">
                <form name="frmWork" id="frmWork" method="post" action="/admin/works/add" class="form-horizontal" enctype="multipart/form-data">
                  
                    <div class="form-group ">
                    <label for="image" class="col-sm-2 control-label">Image</label>
                    <div class="col-sm-10">
                      <img class="team-img img-responsive" src="/work/thumbs/no_image.jpg" width="200" height="150"><br/>
                      <input type="file" id="image" name="image" class="img-preview">
                      
                    </div>
                  </div>                 

                  <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">Vedio</label>
                    <div class="col-sm-10">
                     <input type="file" id="video" name="video">
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="designation" class="col-sm-2 control-label">Description</label>

                    <div class="col-sm-10">
                        <textarea class="form-control" id="description" placeholder="Enter Description" name="description" rows="5">{{body.description}}</textarea>
                      
                    </div>
                  </div> 

                 
                 <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
</section>

<script type="text/javascript">
  
$(document).ready(function(){
 
  $("#frmWork").validate({
    rules: {
     
      description: {
        required: true
      },
     video: {
        required: true,
     
      },
    image: {
        required: true,
        extension: 'gif|png|jpeg|jpg',
        filesize: 5242880
      }
    },
    messages: {
      video: {
        required: "Please upload work vedio"
      },
      description: {
        required: "Please enter details about that work"
      },
    image: {
        required: "Please upload person image",
        extension: 'Image type must be jpg or png'
      }
    }
  });

});
</script>