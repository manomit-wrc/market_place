<section class="content-header">
      <h1>
        Blog
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>        
        <li class="active">Blog List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          {{#if message}}<div class="alert alert-success" id="result77" style="display:none;">{{message}}</div>{{/if}}
                             
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Blog List</h3>
            </div>
            <!-- /.box-header -->
            <div class="topbtn"><a href="/admin/blog/add"><button type="button" class="btn bg-purple btn-rightad">ADD</button></a></div>
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Blog Name</th>
                  <th>Blog Category</th>                  
                  <th>Short Description</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each blog}}
                     <tr>
                      <td>{{this.blog_name}}</td>
                      <td>{{this.blogcategory.name}}</td>
                      <td>{{this.short_description}}</td>                      
                      <td><a href="/admin/blog/edit/{{this.id}}" >Edit</a>&nbsp;|&nbsp;<a href="/admin/blog/delete/{{this.id}}" onclick="return confirm('Are you sure?')">Delete</a></td>
                    </tr>
                     {{/each}}               
                </tbody>
                
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>