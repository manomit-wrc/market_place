<section class="content-header">
  <h1>
    Blog
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="/admin/blog">Blog</a></li>
    <li class="active">Comments</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">               
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Comment List for <strong>"{{blog.blog_name}}"</strong></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th>User</th>
              <th>Comment</th>
              <th>Date</th>
            </tr>
            </thead>
            <tbody>
                {{#each blogcomment}}
                  <tr>
                    <td>{{this.user.fname}} {{this.user.lname}}</td>
                    <td>{{this.blog_comment}}</td>
                    <td>{{dateFormat this.createdAt "short"}}</td>
                  </tr>
                {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>