<section class="content-header">
  <h1>
    Skill
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li><a href="/admin/job-category">Job Category</a></li>
    <li class="active">Edit</li>
  </ol>
</section>

<section class="content">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              
              <li class="active"><a href="#settings" data-toggle="tab">Job Category - Edit</a></li>
            </ul>
            <div class="tab-content">
              
                {{#if error_message}}
                <div class="alert alert-danger" id="result77">
                {{error_message}}
                </div>
                {{/if}}
               <div class="tab-pane active" id="settings">
                <form name="frmProfile" method="post" action="/admin/job-category/edit/{{job_category.id}}" class="form-horizontal" enctype="multipart/form-data">
                  
                  <div class="form-group ">
                    <label for="name" class="col-sm-2 control-label">Category Name</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="job_category_name" placeholder="Enter Job Category Name" name="name" value="{{job_category.name}}" >
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="job_category_desc" class="col-sm-2 control-label">Category short desciption</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="job_category_desc" placeholder="Enter Job Category Description" name="job_category_desc" value="{{job_category.short_desc}}" >
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="background_image" class="col-sm-2 control-label">Background Image</label>
                    <div class="col-sm-10">
                      
                      <img class="team-img img-responsive" src="/job_category_image/resize/{{job_category.background_image}}" alt="Job Category Image" width="200" height="150"><br />
                      <input type="file" id="background_image" name="background_image" class="img-preview">
                    </div>
                  </div>


                  <div class="form-group ">
                    <label for="status" class="col-sm-2 control-label">Status</label>

                    <div class="col-sm-10">
                      <select name="status" id="job_category_status" class="form-control" onchange="jobcatckhstatusval(this.value)">
                        <option value="" disabled="disabled">Select Any</option>
                        <option value="1" {{#if_eq job_category.status 1}} selected="selected" {{/if_eq}}>Active</option>
                        <option value="0" {{#if_eq job_category.status 0}} selected="selected" {{/if_eq}}>In-Active</option>
                      </select>
                      
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

</section>