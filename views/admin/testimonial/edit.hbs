<section class="content-header">
  <h1>
    Testimonial
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li class="active">Testimonial - Edit</li>
  </ol>
</section>

<section class="content">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              
              <li class="active"><a href="#settings" data-toggle="tab">Testimonial - Edit</a></li>
            </ul>
            <div class="tab-content">
            	
              	{{#if error_message}}
              	<div class="alert alert-danger" id="result77">
              	{{error_message}}
              	</div>
              	{{/if}}

               <div class="tab-pane active" id="settings">
                <form name="frmProfile" method="post" action="/admin/testimonial/edit/{{testimonial.id}}" class="form-horizontal" >
                  
                  <div class="form-group ">
                    <label for="name" class="col-sm-2 control-label">Client Name</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="client_name" placeholder="Client Name" name="client_name" value="{{testimonial.ClientName}}" >
                      <span class="text-danger"></span>
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="description" class="col-sm-2 control-label">Description</label>

                    <div class="col-sm-10">
                      <textarea class="form-control" id="description" placeholder="Enter Description" name="description" >{{testimonial.description}}</textarea>
                      <span class="text-danger"></span>
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Edit</button>
                    </div>
                  </div>
                </form>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

</section>