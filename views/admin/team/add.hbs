<section class="content-header">
  <h1>
    Team
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li><a href="/admin/team">Dashboard</a></li>
    <li class="active">Add</li>
  </ol>
</section>

<section class="content">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              
              <li class="active"><a href="#settings" data-toggle="tab">Team - Add</a></li>
            </ul>
            <div class="tab-content">
            	
              	{{#if error_message}}
              	<div class="alert alert-danger" id="result77">
              	{{error_message}}
              	</div>
              	{{/if}}
               <div class="tab-pane active" id="settings">
                <form name="frmTeam" id="frmTeam" method="post" action="/admin/team/add" class="form-horizontal" enctype="multipart/form-data">
                  
                  <div class="form-group ">
                    <label for="name" class="col-sm-2 control-label">Person Name</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" value="{{body.name}}" >
                      
                    </div>
                  </div>                  

                  <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">About</label>
                    <div class="col-sm-10">
                      <textarea class="form-control" id="description" placeholder="Enter Description" name="description" rows="5">{{body.description}}</textarea>
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="designation" class="col-sm-2 control-label">Designation</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="designation" placeholder="Enter Designation" name="designation" value="{{body.designation}}" >
                      
                    </div>
                  </div> 

                  <div class="form-group ">
                    <label for="team_name" class="col-sm-2 control-label">Facebook</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="facebook" placeholder="Enter facebook url" name="facebook" value="{{body.facebook}}" >
                                           
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="linkedin" class="col-sm-2 control-label">Linkedin</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="linkedin" placeholder="Enter linkedin url" name="linkedin" value="{{body.linkedin}}" >
                                          
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="twitter" class="col-sm-2 control-label">Twitter</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="twitter" placeholder="Enter twitter url" name="twitter" value="{{body.twitter}}" >
                                           
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="google_plus" class="col-sm-2 control-label">G+</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="google_plus" placeholder="Enter google plus url" name="google_plus" value="{{body.google_plus}}">
                                           
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="image" class="col-sm-2 control-label">Image</label>
                    <div class="col-sm-10">
                      <img class="team-img img-responsive" src="/team/thumbs/no_image.jpg" width="200" height="150"><br/>
                      <input type="file" id="image" name="image" class="img-preview">
                      
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
</section>